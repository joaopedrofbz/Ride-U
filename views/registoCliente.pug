      <div class="testbox">
          <form action="/registrarCL" method="post">
            <div class="item">
              <h1 style="color: black;">Registo Cliente</h1>
            </div>  
            <br>
            <br>
            <div class="item">
              <p>Data Nascimento</p>
              <input type="date" name="CldataNasc"required/>
            </div>
            <div class="item">
              <p>Primeiro Nome</p>
              <input type="text" name="Clnome"required/>
            </div>
            <div class="item">
              <p>Nome do Meio</p>
              <input type="text" name="ClnomeMeio" />
            </div>
            <div class="item">
              <p>Apelido</p>
              <input type="text" name="Clapelido"required/>
            </div>
            <div class="item">
              <p>Género</p>
              <select required name="Clgenero" >
                <option value=""></option>
                <option value="F">F</option>
                <option value="M">M</option>
              </select>
            </div>
            <div class="item">
              <p>Nº Telemóvel</p>
              <input type="text" name="ClTelemovel" required/>
            </div>                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                   
            <div class="btn-block">
              <button type="submit" >Submeter</button>
            </div>
      </div>
